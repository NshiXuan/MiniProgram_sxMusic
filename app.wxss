page{
  background-color: #fafafa;
  box-sizing: border-box;
}

.padding{
  padding: 20rpx;
}

.left-padding{
  padding-left: 10rpx;
}

.right-padding{
  padding-right: 10rpx;
}

.margin-top{
  margin-top: 20rpx;
}

.margin-top-bottom{
  margin: 10rpx 0;
}

.text-nowrap-v1 {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.text-nowrap-v2{
  margin-top: 10rpx;
  font-size: 28rpx;

  /* 显示两行 */
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -moz-box;
  -moz-line-clamp:2;
  -moz-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  overflow: hidden;
}

.play-count{
  position: absolute;
  bottom: 8rpx;
  background-color: rgba(0, 0, 0, .5);
  color: #fff;
  font-size: 24rpx;
  border-radius: 6rpx;
  padding: 6rpx;
}