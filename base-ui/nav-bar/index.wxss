/* base-ui/nav-bar/index.wxss */
.nav-bar {
  display: flex;
  /* 手机端导航一般高度为44px */
  /* height: 44px; */
  /* 内容居中 */
  text-align: center;
}

.left,
.right {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
}

.left-arrow{
  display: none;
}

.left-slot:empty + .left-arrow{
  display: block;
}

.left .left-arrow .icon{
  width: 50rpx;
  display: block;
}

.center {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
}

.center-title{
  display: none;
}

.center-slot:empty+.center-title{
  display: block;
}