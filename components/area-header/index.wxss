/* components/area-header/index.wxss */
.header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
}

.header .title{
  font-size: 35rpx;
  font-weight: 700;
}

.header .slot:empty + .default{
  display: flex;
}

.header .default{
  display: none;
  align-items: center;
  font-size: 28rpx;
  color:#777
}

.right{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #777;
}