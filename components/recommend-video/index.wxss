.item {
  display: flex;
  width: 100%;
}

.item .image {
  height: 130rpx;
  width: 200rpx;
  border-radius: 12rpx;
}

.item .item-info {
  /* flex不能省 不然图片显示不一致 */
  flex: 1;  
  padding: 0 20rpx 0 10rpx;
}

.item-title {
  font-weight: 600;
}

.item-creator {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}