/* components/video-item-v1/index.wxss */
.item {
  width: 100%;
  margin-bottom: 30rpx;
}

.album {
  position: relative;
  overflow: hidden;
  border-radius: 12rpx;
}

.image {
  width: 380rpx;
}

.info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  position: absolute;
  bottom: 0rpx;
  height: 40rpx;
  line-height: 40rpx;
  background-color: rgba(0, 0, 0, .5);
  color: #fff;
  font-size: 24rpx;
}