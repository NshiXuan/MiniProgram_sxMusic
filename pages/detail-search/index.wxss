/* pages/detail-search/index.wxss */
page{
  padding: 0 20rpx;
  padding-top: 56px;
}

/* 搜索框 */
.search{
  position: fixed;
  top: 0;
  left: 20rpx;
  right: 20rpx;
}

.van-search{
  padding: 10px 0!important;
  background: #fafafa!important;
}

.van-search__content{
  background-color: #fff!important;
}

.hot .list{
  display: flex;
  flex-wrap: wrap;
}

.hot .tag{
  font-size: 26rpx;
  background-color: #fff;
  padding: 10rpx 12rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  margin-top: 10rpx;
}

.hot .tag:first-of-type{
  color: #26ce8a;
}

/* 搜索建议 */
.suggest .title{
  color: #26ce8a;
  font-size: 34rpx;
  font-weight: 700;
}

.item{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.item .icon{
  width: 40rpx;
  margin-right: 10rpx;
}

.result .title{
  font-size: 32rpx;
  color: #26ce8a;
}